<% if @requests && !@requests.empty? %>
<!--ユーザーがnilでなく、かつ空でない場合は表示する-->
  <div class = "container">
    <div class = "row justify-content-center">
      <div class = "col-md-10">
        <div class = "mt-3">
          <h3><strong>申請者一覧</strong></h3>
          <table class = "table mt-3">
            <thead>
              <tr>
                <th>ユーザーID</th>
                <th>ユーザー名</th>
                <th>メールアドレス</th>
              </tr>
            </thead>
            <% @requests.each do |request| %>
              <% if request.mark_status == "unverified" %>
              <!--ステータスがunverified(未確認)である場合のみ表示する-->
                <tbody>
                  <tr>
                    <td><%= request.user.id %></td>
                    <td><%= link_to request.user.name, edit_admin_user_request_path(request.user, request), class: "text-dark" %></td>
                    <td><%= request.user.email.split("@").first %>@...</td>
                    <!--@までを表示し、それ以降は…で省略する-->
                  </tr>
                </tbody>
              <% end %>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class = "mx-auto align-items-center" style = "display: flex; justify-content: center; align-items: center; height: 60vh; flex-direction: column;">
    <h3><strong>申請者はいません。</strong></h3>
  </div>
<% end %>

<div class = "pagination justify-content-center">
  <%= paginate @requests %>
</div>
