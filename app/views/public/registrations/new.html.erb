<div class = "container">
  <div class = "row">
    <div class = "mx-auto mt-5">
      <div class = "mx-auto align-items-center" style = "display: flex; justify-content: center; align-items: center; height: 60vh; flex-direction: column;">
        <h3><strong>新規登録</strong></h3>
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class = "field">
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </div>
          <div class = "field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class = "field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class = "field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class = "actions">
            <%= f.submit "登録する", class: "btn btn-dark mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
