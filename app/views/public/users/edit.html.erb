<% if @user.present? && @user.id == current_user.id %>
<!-- user_idがnilでなく、ログイン中のidだった場合は下記を表示する -->
<h2>プロフィール編集</h2>
<%= form_with model: @user, url: public_user_path(@user.id), method: :patch do |f| %>
  <label for="inputName">ユーザー名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名を入力"%>
  <label for="inputIntroduction">自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文を入力"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>
<%= link_to '退会する',  public_user_confirm_path(current_user), class: "btn btn-danger" %>
<% end %>