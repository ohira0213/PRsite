<% if @user.present? && @user.id == current_user.id %>
<!-- user_idがnilでなく、ログイン中のidだった場合は下記を表示する -->
<h2>プロフィール編集</h2>
<%= form_with model: @user, url: public_user_path(@user.id), method: :patch do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>
<% else %>
  <p>こちらはご覧いただけません</p>
  <%= image_tag 'ozigi_neko.jpg', width: 500, height: 500 %>
</div>
<% end %>