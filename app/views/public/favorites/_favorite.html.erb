<% if post.favorited_by?(current_user) %>
  <%= link_to public_post_favorites_path(post), method: :delete, remote: true, class: "text-warning mr-2 fuchidori" do %>
    <i class = "fa-solid fa-thumbs-up"></i> <%= post.favorites_count %>
  <% end %>
<% else %>
  <%= link_to public_post_favorites_path(post), method: :post, remote: true, class: "text-dark mr-2" do %>
    <i class = "fa-regular fa-thumbs-up"></i> <%= post.favorites_count %>
  <% end %>
<% end %>