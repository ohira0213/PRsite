<div class = "container">
  <div class = "row">
    <div class = "mx-auto align-items-center" style="display: flex; justify-content: center; align-items: center; height: 60vh; flex-direction: column;" >
      <h3>新規投稿</h3>
      <%= form_with model: @post, url: public_posts_path, method: :post do |f| %>
        <h6>イメージ画像</h6>
        <%= f.file_field :post_image, accept: "image/*" %>
        <h6>商品紹介文</h6>
        <%= f.text_area :text, rows: '10', placeholder: "商品紹介文を入力", style: "width: 100%;" %>
        <%= f.submit "投稿する", class: "btn btn-sm btn-dark float-right" %>
      <% end %>
    </div>
  </div>
</div>